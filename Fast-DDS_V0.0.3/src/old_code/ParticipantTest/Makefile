BASEDIR=.
OUTDIR= $(BASEDIR)/output
CC=gcc
CPP=g++
LN=g++
AR=ar
CP=cp

-include $(EPROSIMADIR)/building/makefiles/eProsima.mk

PARTICIPANTTEST_OUTDIR= $(OUTDIR)/ParticipantTest
PARTICIPANTTEST_OUTDIR_DEBUG = $(PARTICIPANTTEST_OUTDIR)/debug
PARTICIPANTTEST_OUTDIR_RELEASE = $(PARTICIPANTTEST_OUTDIR)/release

PARTICIPANTTEST_SED_OUTPUT_DIR_DEBUG= $(subst /,\\/,$(PARTICIPANTTEST_OUTDIR_DEBUG))
PARTICIPANTTEST_SED_OUTPUT_DIR_RELEASE= $(subst /,\\/,$(PARTICIPANTTEST_OUTDIR_RELEASE))

PARTICIPANTTEST_CFLAGS = $(CFLAGS) -std=c++0x 
PARTICIPANTTEST_CFLAGS_DEBUG = $(CFLAGS_DEBUG) -std=c++0x 

PARTICIPANTTEST_TARGET_DEBUG= $(BASEDIR)/bin/$(EPROSIMA_TARGET)/ParticipantTestd
PARTICIPANTTEST_TARGET= $(BASEDIR)/bin/$(EPROSIMA_TARGET)/ParticipantTest

PARTICIPANTTEST_INCLUDE_DIRS= $(INCLUDE_DIRS) -I$(BASEDIR)/../../../include \
                         -I$(EPROSIMADIR)/code

PARTICIPANTTEST_LIBS_DEBUG= $(LIBS_DEBUG) -L$(BASEDIR)/../../../lib/$(EPROSIMA_TARGET) -leprosimartpsd -lboost_system -lboost_thread
PARTICIPANTTEST_LIBS_RELEASE= $(LIBS) -L$(BASEDIR)/../../../lib/$(EPROSIMA_TARGET) -leprosimartps -lboost_system -lboost_thread

PARTICIPANTTEST_SRC_CFILES=

PARTICIPANTTEST_SRC_CPPFILES= $(BASEDIR)/ParticipantTest.cpp

# Project sources are copied to the current directory
PARTICIPANTTEST_SRCS= $(PARTICIPANTTEST_SRC_CFILES) $(PARTICIPANTTEST_SRC_CPPFILES)

# Source directories
PARTICIPANTTEST_SOURCES_DIRS_AUX= $(foreach srcdir, $(dir $(PARTICIPANTTEST_SRCS)), $(srcdir))
PARTICIPANTTEST_SOURCES_DIRS= $(shell echo $(PARTICIPANTTEST_SOURCES_DIRS_AUX) | tr " " "\n" | sort | uniq | tr "\n" " ")

PARTICIPANTTEST_OBJS_DEBUG = $(foreach obj,$(notdir $(addsuffix .o, $(PARTICIPANTTEST_SRCS))), $(PARTICIPANTTEST_OUTDIR_DEBUG)/$(obj))
PARTICIPANTTEST_DEPS_DEBUG = $(foreach dep,$(notdir $(addsuffix .d, $(PARTICIPANTTEST_SRCS))), $(PARTICIPANTTEST_OUTDIR_DEBUG)/$(dep))
PARTICIPANTTEST_OBJS_RELEASE = $(foreach obj,$(notdir $(addsuffix .o, $(PARTICIPANTTEST_SRCS))), $(PARTICIPANTTEST_OUTDIR_RELEASE)/$(obj))
PARTICIPANTTEST_DEPS_RELEASE = $(foreach dep,$(notdir $(addsuffix .d, $(PARTICIPANTTEST_SRCS))), $(PARTICIPANTTEST_OUTDIR_RELEASE)/$(dep))

OBJS+= $(PARTICIPANTTEST_OBJS_DEBUG) $(PARTICIPANTTEST_OBJS_RELEASE)
DEPS+= $(PARTICIPANTTEST_DEPS_DEBUG) $(PARTICIPANTTEST_DEPS_RELEASE)

.PHONY: ParticipantTest checkParticipantTestDirectories

ParticipantTest: checkParticipantTestDirectories $(PARTICIPANTTEST_TARGET_DEBUG) $(PARTICIPANTTEST_TARGET)

checkParticipantTestDirectories:
	@mkdir -p $(OUTDIR)
	@mkdir -p $(PARTICIPANTTEST_OUTDIR)
	@mkdir -p $(PARTICIPANTTEST_OUTDIR_DEBUG)
	@mkdir -p $(PARTICIPANTTEST_OUTDIR_RELEASE)
	@mkdir -p $(BASEDIR)/bin
	@mkdir -p $(BASEDIR)/bin/$(EPROSIMA_TARGET)

$(PARTICIPANTTEST_TARGET_DEBUG): $(PARTICIPANTTEST_OBJS_DEBUG)
	$(LN) $(LDFLAGS) -o $(PARTICIPANTTEST_TARGET_DEBUG) $(PARTICIPANTTEST_OBJS_DEBUG) $(LIBRARY_PATH) $(PARTICIPANTTEST_LIBS_DEBUG) $(PARTICIPANTTEST_STATIC_LIBS)

$(PARTICIPANTTEST_TARGET): $(PARTICIPANTTEST_OBJS_RELEASE)
	$(LN) $(LDFLAGS) -o $(PARTICIPANTTEST_TARGET) $(PARTICIPANTTEST_OBJS_RELEASE) $(LIBRARY_PATH) $(PARTICIPANTTEST_LIBS_RELEASE) $(PARTICIPANTTEST_STATIC_LIBS)

vpath %.c $(PARTICIPANTTEST_SOURCES_DIRS)
vpath %.cpp $(PARTICIPANTTEST_SOURCES_DIRS)

$(PARTICIPANTTEST_OUTDIR_DEBUG)/%.o:%.c
	@echo Calculating dependencies \(DEBUG mode\) $<
	@$(CC) $(PARTICIPANTTEST_CFLAGS_DEBUG) -MM $(PARTICIPANTTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(PARTICIPANTTEST_SED_OUTPUT_DIR_DEBUG)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(DEBUG mode\) $<  
	@$(CC) $(PARTICIPANTTEST_CFLAGS_DEBUG) $(PARTICIPANTTEST_INCLUDE_DIRS) $< -o $@

$(PARTICIPANTTEST_OUTDIR_RELEASE)/%.o:%.c
	@echo Calculating dependencies \(RELEASE mode\) $<
	@$(CC) $(PARTICIPANTTEST_CFLAGS) -MM $(PARTICIPANTTEST_CFLAGS) $(PARTICIPANTTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(PARTICIPANTTEST_SED_OUTPUT_DIR_RELEASE)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(RELEASE mode\) $<
	@$(CC) $(PARTICIPANTTEST_CFLAGS) $(PARTICIPANTTEST_INCLUDE_DIRS) $< -o $@

$(PARTICIPANTTEST_OUTDIR_DEBUG)/%.c.o:%.c
	@echo Calculating dependencies \(DEBUG mode\) $<
	@$(CC) $(PARTICIPANTTEST_CFLAGS_DEBUG) -MM $(PARTICIPANTTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(PARTICIPANTTEST_SED_OUTPUT_DIR_DEBUG)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(DEBUG mode\) $<  
	@$(CC) $(PARTICIPANTTEST_CFLAGS_DEBUG) $(PARTICIPANTTEST_INCLUDE_DIRS) $< -o $@

$(PARTICIPANTTEST_OUTDIR_RELEASE)/%.c.o:%.c
	@echo Calculating dependencies \(RELEASE mode\) $<
	@$(CC) $(PARTICIPANTTEST_CFLAGS) -MM $(PARTICIPANTTEST_CFLAGS) $(PARTICIPANTTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(PARTICIPANTTEST_SED_OUTPUT_DIR_RELEASE)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(RELEASE mode\) $<
	@$(CC) $(PARTICIPANTTEST_CFLAGS) $(PARTICIPANTTEST_INCLUDE_DIRS) $< -o $@

$(PARTICIPANTTEST_OUTDIR_DEBUG)/%.cpp.o:%.cpp
	@echo Calculating dependencies \(DEBUG mode\) $<
	@$(CPP) $(PARTICIPANTTEST_CFLAGS_DEBUG) -MM $(PARTICIPANTTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(PARTICIPANTTEST_SED_OUTPUT_DIR_DEBUG)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(DEBUG mode\) $<
	@$(CPP) $(PARTICIPANTTEST_CFLAGS_DEBUG) $(PARTICIPANTTEST_INCLUDE_DIRS) $< -o $@

$(PARTICIPANTTEST_OUTDIR_RELEASE)/%.cpp.o:%.cpp
	@echo Calculating dependencies \(RELEASE mode\) $<
	@$(CPP) $(PARTICIPANTTEST_CFLAGS) -MM $(PARTICIPANTTEST_CFLAGS) $(PARTICIPANTTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(PARTICIPANTTEST_SED_OUTPUT_DIR_RELEASE)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(RELEASE mode\) $<
	@$(CPP) $(PARTICIPANTTEST_CFLAGS) $(PARTICIPANTTEST_INCLUDE_DIRS) $< -o $@

.PHONY: all

all: Participant

clean:
	@rm -f $(OBJS)
	@rm -f $(DEPS)

ifneq ($(MAKECMDGOALS), clean)
-include $(DEPS)
endif
