BASEDIR=.
OUTDIR= $(BASEDIR)/output
CC=gcc
CPP=g++
LN=g++
AR=ar
CP=cp

-include $(EPROSIMADIR)/building/makefiles/eProsima.mk

MESSAGECREATORTEST_OUTDIR= $(OUTDIR)/MessageCreatorTest
MESSAGECREATORTEST_OUTDIR_DEBUG = $(MESSAGECREATORTEST_OUTDIR)/debug
MESSAGECREATORTEST_OUTDIR_RELEASE = $(MESSAGECREATORTEST_OUTDIR)/release

MESSAGECREATORTEST_SED_OUTPUT_DIR_DEBUG= $(subst /,\\/,$(MESSAGECREATORTEST_OUTDIR_DEBUG))
MESSAGECREATORTEST_SED_OUTPUT_DIR_RELEASE= $(subst /,\\/,$(MESSAGECREATORTEST_OUTDIR_RELEASE))

MESSAGECREATORTEST_CFLAGS = $(CFLAGS) -std=c++0x
MESSAGECREATORTEST_CFLAGS_DEBUG = $(CFLAGS_DEBUG) -std=c++0x

MESSAGECREATORTEST_TARGET_DEBUG= $(BASEDIR)/bin/$(EPROSIMA_TARGET)/MessageCreatorTestd
MESSAGECREATORTEST_TARGET= $(BASEDIR)/bin/$(EPROSIMA_TARGET)/MessageCreatorTest

MESSAGECREATORTEST_INCLUDE_DIRS= $(INCLUDE_DIRS) -I$(BASEDIR)/../../../include \
                         -I$(EPROSIMADIR)/code

MESSAGECREATORTEST_LIBS_DEBUG= $(LIBS_DEBUG) -L$(BASEDIR)/../../../lib/$(EPROSIMA_TARGET) -leprosimartpsd
MESSAGECREATORTEST_LIBS_RELEASE= $(LIBS) -L$(BASEDIR)/../../../lib/$(EPROSIMA_TARGET) -leprosimartps

MESSAGECREATORTEST_SRC_CFILES=

MESSAGECREATORTEST_SRC_CPPFILES= $(BASEDIR)/MessageCreatorTest.cpp

# Project sources are copied to the current directory
MESSAGECREATORTEST_SRCS= $(MESSAGECREATORTEST_SRC_CFILES) $(MESSAGECREATORTEST_SRC_CPPFILES)

# Source directories
MESSAGECREATORTEST_SOURCES_DIRS_AUX= $(foreach srcdir, $(dir $(MESSAGECREATORTEST_SRCS)), $(srcdir))
MESSAGECREATORTEST_SOURCES_DIRS= $(shell echo $(MESSAGECREATORTEST_SOURCES_DIRS_AUX) | tr " " "\n" | sort | uniq | tr "\n" " ")

MESSAGECREATORTEST_OBJS_DEBUG = $(foreach obj,$(notdir $(addsuffix .o, $(MESSAGECREATORTEST_SRCS))), $(MESSAGECREATORTEST_OUTDIR_DEBUG)/$(obj))
MESSAGECREATORTEST_DEPS_DEBUG = $(foreach dep,$(notdir $(addsuffix .d, $(MESSAGECREATORTEST_SRCS))), $(MESSAGECREATORTEST_OUTDIR_DEBUG)/$(dep))
MESSAGECREATORTEST_OBJS_RELEASE = $(foreach obj,$(notdir $(addsuffix .o, $(MESSAGECREATORTEST_SRCS))), $(MESSAGECREATORTEST_OUTDIR_RELEASE)/$(obj))
MESSAGECREATORTEST_DEPS_RELEASE = $(foreach dep,$(notdir $(addsuffix .d, $(MESSAGECREATORTEST_SRCS))), $(MESSAGECREATORTEST_OUTDIR_RELEASE)/$(dep))

OBJS+= $(MESSAGECREATORTEST_OBJS_DEBUG) $(MESSAGECREATORTEST_OBJS_RELEASE)
DEPS+= $(MESSAGECREATORTEST_DEPS_DEBUG) $(MESSAGECREATORTEST_DEPS_RELEASE)

.PHONY: MessageCreatorTest checkMessageCreatorTestDirectories

MessageCreatorTest: checkMessageCreatorTestDirectories $(MESSAGECREATORTEST_TARGET_DEBUG) $(MESSAGECREATORTEST_TARGET)

checkMessageCreatorTestDirectories:
	@mkdir -p $(OUTDIR)
	@mkdir -p $(MESSAGECREATORTEST_OUTDIR)
	@mkdir -p $(MESSAGECREATORTEST_OUTDIR_DEBUG)
	@mkdir -p $(MESSAGECREATORTEST_OUTDIR_RELEASE)
	@mkdir -p $(BASEDIR)/bin
	@mkdir -p $(BASEDIR)/bin/$(EPROSIMA_TARGET)

$(MESSAGECREATORTEST_TARGET_DEBUG): $(MESSAGECREATORTEST_OBJS_DEBUG)
	$(LN) $(LDFLAGS) -o $(MESSAGECREATORTEST_TARGET_DEBUG) $(MESSAGECREATORTEST_OBJS_DEBUG) $(LIBRARY_PATH) $(MESSAGECREATORTEST_LIBS_DEBUG) $(MESSAGECREATORTEST_STATIC_LIBS)

$(MESSAGECREATORTEST_TARGET): $(MESSAGECREATORTEST_OBJS_RELEASE)
	$(LN) $(LDFLAGS) -o $(MESSAGECREATORTEST_TARGET) $(MESSAGECREATORTEST_OBJS_RELEASE) $(LIBRARY_PATH) $(MESSAGECREATORTEST_LIBS_RELEASE) $(MESSAGECREATORTEST_STATIC_LIBS)

vpath %.c $(MESSAGECREATORTEST_SOURCES_DIRS)
vpath %.cpp $(MESSAGECREATORTEST_SOURCES_DIRS)

$(MESSAGECREATORTEST_OUTDIR_DEBUG)/%.o:%.c
	@echo Calculating dependencies \(DEBUG mode\) $<
	@$(CC) $(MESSAGECREATORTEST_CFLAGS_DEBUG) -MM $(MESSAGECREATORTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(MESSAGECREATORTEST_SED_OUTPUT_DIR_DEBUG)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(DEBUG mode\) $<  
	@$(CC) $(MESSAGECREATORTEST_CFLAGS_DEBUG) $(MESSAGECREATORTEST_INCLUDE_DIRS) $< -o $@

$(MESSAGECREATORTEST_OUTDIR_RELEASE)/%.o:%.c
	@echo Calculating dependencies \(RELEASE mode\) $<
	@$(CC) $(MESSAGECREATORTEST_CFLAGS) -MM $(MESSAGECREATORTEST_CFLAGS) $(MESSAGECREATORTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(MESSAGECREATORTEST_SED_OUTPUT_DIR_RELEASE)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(RELEASE mode\) $<
	@$(CC) $(MESSAGECREATORTEST_CFLAGS) $(MESSAGECREATORTEST_INCLUDE_DIRS) $< -o $@

$(MESSAGECREATORTEST_OUTDIR_DEBUG)/%.c.o:%.c
	@echo Calculating dependencies \(DEBUG mode\) $<
	@$(CC) $(MESSAGECREATORTEST_CFLAGS_DEBUG) -MM $(MESSAGECREATORTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(MESSAGECREATORTEST_SED_OUTPUT_DIR_DEBUG)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(DEBUG mode\) $<  
	@$(CC) $(MESSAGECREATORTEST_CFLAGS_DEBUG) $(MESSAGECREATORTEST_INCLUDE_DIRS) $< -o $@

$(MESSAGECREATORTEST_OUTDIR_RELEASE)/%.c.o:%.c
	@echo Calculating dependencies \(RELEASE mode\) $<
	@$(CC) $(MESSAGECREATORTEST_CFLAGS) -MM $(MESSAGECREATORTEST_CFLAGS) $(MESSAGECREATORTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(MESSAGECREATORTEST_SED_OUTPUT_DIR_RELEASE)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(RELEASE mode\) $<
	@$(CC) $(MESSAGECREATORTEST_CFLAGS) $(MESSAGECREATORTEST_INCLUDE_DIRS) $< -o $@

$(MESSAGECREATORTEST_OUTDIR_DEBUG)/%.cpp.o:%.cpp
	@echo Calculating dependencies \(DEBUG mode\) $<
	@$(CPP) $(MESSAGECREATORTEST_CFLAGS_DEBUG) -MM $(MESSAGECREATORTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(MESSAGECREATORTEST_SED_OUTPUT_DIR_DEBUG)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(DEBUG mode\) $<
	@$(CPP) $(MESSAGECREATORTEST_CFLAGS_DEBUG) $(MESSAGECREATORTEST_INCLUDE_DIRS) $< -o $@

$(MESSAGECREATORTEST_OUTDIR_RELEASE)/%.cpp.o:%.cpp
	@echo Calculating dependencies \(RELEASE mode\) $<
	@$(CPP) $(MESSAGECREATORTEST_CFLAGS) -MM $(MESSAGECREATORTEST_CFLAGS) $(MESSAGECREATORTEST_INCLUDE_DIRS) $< | sed "s/^.*:/$(MESSAGECREATORTEST_SED_OUTPUT_DIR_RELEASE)\/&/g" > $(@:%.o=%.d)
	@echo Compiling \(RELEASE mode\) $<
	@$(CPP) $(MESSAGECREATORTEST_CFLAGS) $(MESSAGECREATORTEST_INCLUDE_DIRS) $< -o $@

.PHONY: all

all: MessageCreator

clean:
	@rm -f $(OBJS)
	@rm -f $(DEPS)

ifneq ($(MAKECMDGOALS), clean)
-include $(DEPS)
endif
